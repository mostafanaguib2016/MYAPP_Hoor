<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:paddingTop="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/signin_btn">
        <TextView
            android:id="@+id/avatar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/rate"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="5dp"/>


        <EditText
            android:id="@+id/rate_long_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="@string/rate"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="center|top"
            android:paddingTop="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar_name"
            app:layout_constraintBottom_toTopOf="@id/add_rate_btn"
            android:background="@drawable/rate_back"
            android:elevation="2dp"
            />
        <TextView
            android:id="@+id/add_rate_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="@string/rate"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/signup_btn"
            android:layout_marginVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate_long_text"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>